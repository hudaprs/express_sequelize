<%- include('../../layouts/header.ejs') %>
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="float-left">
                        <h5 class="card-title">
                            Update <%= user.name %>
                        </h5>
                    </div>

                    <div class="float-right">
                        <a href="/users" class="btn btn-sm btn-secondary text-light">
                            Back
                        </a>
                    </div>
                </div>

                <form action="/users/update" method="POST">
                    <input type="hidden" name="id" value="<%= user.id %>">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" class="form-control" placeholder="Name" value="<%= user.name %>">
                        </div>
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" name="username" id="username" class="form-control" placeholder="Username" value="<%= user.username %>">
                        </div>
                    </div>
                
                    <div class="card-footer">
                        <button type="submit" class="btn btn-sm btn-info">
                            Update
                        </button>
                    </div>
                </form>    
            </div>
        </div>
    </div>
<%- include('../../layouts/footer.ejs') %>