<%- include('../../layouts/header.ejs') %>
    <a href="/users/create" class="btn btn-sm btn-secondary text-light">
        Create New User
    </a>
    
    <hr>
    
    <div class="row">
        <div class="col-md-8">
            <% if(users.length > 0) { %>   
                <ul class="list-group">
                    <% users.forEach(user => { %>
                        <li class="list-group-item">
                            <%= user.name %>

                            <form action="/users/<%= user.id %>" method="POST">
                                <input type="hidden" name="id" value="<%= user.id %>">
                                <button type="submit" class="btn btn-sm btn-danger float-right ml-2" onclick="return confirm('Delete <%= user.name %> ?')">
                                    Delete
                                </button>
                            </form>
                            <a href="/users/<%= user.id %>/edit" class="btn btn-sm btn-warning text-light float-right ml-2">
                                Edit
                            </a>
                            <a href="/users/<%= user.id %>" class="btn btn-sm btn-primary float-right">
                                Detail
                            </a>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p class="text-danger">
                    No users found
                </p>
            <% } %>
        </div>
    </div>
<%- include('../../layouts/footer.ejs') %>